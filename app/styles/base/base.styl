@import 'fonts'

html, body
  font-size 16px
  line-height 1.2
  font-family 'Lato-Regular', Helvetica, Arial, sans-serif
html
  height 100vh

body
  min-height 100vh

header, section, footer
  overflow hidden



h1, h2, h3, h4, h5, h6
  font-weight 800


h1
  font-size 42px

h2
  font-size 30px

h3
  font-size 22px


h1, h2, h3, h4, h5, h6, p, ul, ol, blockquote
  margin 0
  padding 0

.bold-text
  font-family 'fira_sansbold', sans-serif


a
  text-decoration none

  color $links-color

  &:hover, &.hover, &:focus
    text-decoration none

ul
  clearlist()

input:-webkit-autofill
  -webkit-box-shadow: 0 0 0px 1000px #ededed inset

input[type="text"].form_error
  color red

div.form_error
  display none !important
  opacity 0
  visibility none

textarea
  resize none
textarea:focus, input:focus
  outline 0
input[type="text"], textarea
  background-color #ededed
  border 0
  placeholder-color(#767373)
  rems(13px)


//Buttons

.btn
  font-variant small-caps
  transition color .3s, background-color .3s
  semi-bold()
  rems(16px)
  &:not(.empty-btn)
    box-shadow 0 9px 27px 3px rgba(0, 0, 0, .15)

.btn.ghost-btn
  background-color transparent
  color #fff
  box-shadow 0 9px 27px 3px rgba(0,0,0,0.15), inset 0 0 0 5px #fff
  padding 20px 26px
  min-width 250px
  &:hover
  &:active
  &:focus
    background-color #fff
    color #06293e
  &.blue
    box-shadow inset 0 0 0 5px #00aeef
    color #00aeef
    &:hover
    &:active
    &:focus
      background-color #00aeef
      color #fff

.white-btn
  background-color #fff
  &:hover
  &:active
  &:focus
    background-color $main-clr
    color #fff

.yellow-btn
  background-color $main-clr
  color #313131
  padding 20px 26px
  min-width 250px
  text-align center
  &:hover
    background-color #CC9502
    color #333

.grey-btn
  background-color $gr-btn-clr
  color #fff
  &:hover
    background-color #3e4c4d
    color #fff


//Buttons end

.blue
  color $main-clr

.starts-with-quote
  margin-left -.4em
