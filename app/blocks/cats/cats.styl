.app__categories
.cat
  border: 2px solid #f3f3f3
  margin: 0 20px 40px
  transition: border-color .3s
  border-radius: 2px
  cursor pointer
  &.checked
    border-color: #3680d3
  &__img
    padding-top: 20px
  &__img img
    display: block
    margin: 0 auto
  &__title
    font-family: "Lato-Black", Arial, Tahoma, sans-serif
    text-align: center
    padding-top: 10px
    h5
      font-size: 18px
      margin 6px 0 4px
  &__descr
    text-align: center
  &__opt
    margin-top: 10px
    padding-bottom: 20px
    position: relative
  &__check
    display: none
  &.checked label
    background: #3680d3
    border-color: #3680d3
    transform: scale(1.3)
    animation: cd-bounce .5s
  &__icon
    display: block
    position: absolute
    height: 30px
    width: 30px
    left: 50%
    margin-left: -15px
  &__label
    width: 30px
    height: 30px
    border: 1px solid #ebeaea
    border-radius: 50%
    margin 0 auto
    display block
    cursor pointer
    -webkit-transition: background-color .3s, border-color .3s, -webkit-transform .3s
    transition: background-color .3s, border-color .3s, -webkit-transform .3s
    transition: background-color .3s, transform .3s, border-color .3s
    transition: background-color .3s, transform .3s, border-color .3s, -webkit-transform .3s
    position: relative

