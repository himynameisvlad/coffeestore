.product
	
	padding-top 10px
	
	&__subtitle
		font-size 18px
		margin 40px 0 20px
	
	&__image
		padding-top 40px
		img
			display block
			width 100%
			height auto
			
	&__type-check
		display inline-block
		width 18px
		height 18px
		border 1px solid #ebeaea
		border-radius 50%
		position relative
		top 4px
		margin-right 10px
		-webkit-transition: background-color .3s, border-color .3s, -webkit-transform .3s
		transition: background-color .3s, border-color .3s, -webkit-transform .3s
		transition: background-color .3s, transform .3s, border-color .3s
		transition: background-color .3s, transform .3s, border-color .3s, -webkit-transform .3s
		background-image url('../images/icon-check.svg')
		background-repeat no-repeat
		background-position center center
		background-size 85%
	
	&__descr
		text-align center
		margin-top 20px
		i
			display inline-block
			font-style normal
			border 1px solid #3b81f3
			border-radius 50%
			width 22px
			line-height 22px
			margin-right 4px
	
	&__list
		
		
		&-item
			display block
			line-height 32px
			cursor pointer
			
			&.active
				.product__type-check
					background-color #3680d3
					border-color: #3680d3
					transform: scale(1.3)
					animation: cd-bounce .5s
	
	&__vol
		&-window
			width 46%
			border 1px solid #ebeaea
			border-radius 4px
			position relative
			padding 10px 40px 6px 15px
			cursor pointer
			&.active
				&:after
					background-position -35px -4px
			&:after
				content ''
				display inline-block
				width 14px
				height 7px
				background url('../images/sprite.png') no-repeat -35px -24px
				position absolute
				right 12px
				top 50%
				margin-top -3px
		
		&-window.active &-list
			display block
		
		&-list
			position absolute
			display none
			padding 5px 0 4px
			background #fff
			left -1px
			right -1px
			top 34px
			border 1px solid #ebeaea
			border-top 0
			z-index 1
			
		&-item
			display block
			padding 4px 15px


.prop
	
	
	&-item
		display block
		margin-bottom 20px
		padding 20px 15px 20px 25px
		border 1px solid #ebebeb
		border-radius 4px
		clearfix()
		&--custom
			.prop-item__cust
				display block
			.prop-item__single
				display none
		&.active
			.product__type-check
				background-color #3680d3
				border-color: #3680d3

		&__title
			float left
			width 60%
			h6
				font-size 16px
				font-family: "Lato-Regular", Arial, Tahoma, sans-serif
				margin-bottom 0
			a
				font-size 14px
		
		&__opts
			float right
			width 40%
			&:hover
				& .product__type-check
					border-color #3b81f3
		
		&__cust
			padding-top 4px
			span
				color #3680d3
				display inline-block
				margin-left 4px
				width 40px
				text-align center
				font-size 14px
		
		&__minus
		&__plus
			color #3680d3
			font-size 18px
			display inline-block
			width 30px
			line-height 30px
			text-align center
			border-radius 100%
			box-shadow 0 2px 16px rgba(0,0,0,0.15)
			cursor pointer
			background #fff
			border 0
			&:focus
				outline 0
		
		&__single
			float right
			display block
			.product__type-check
				border-color #cdcdcd
				cursor pointer
				-webkit-transition: background-color .3s, border-color .3s, -webkit-transform .3s
				transition: background-color .3s, border-color .3s, -webkit-transform .3s
				transition: background-color .3s, transform .3s, border-color .3s
				transition: background-color .3s, transform .3s, border-color .3s, -webkit-transform .3s
				background-image url('../images/icon-check.svg')
				background-repeat no-repeat
				background-position center center
				background-size 85%
				&.active
					background-color #3680d3
					border-color: #3680d3