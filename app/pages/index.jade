doctype
html(lang='ru')
	block head
		- var pageName = 'index'
		- var pageTitle = "Чувство вкуса магазин"
	include ../blocks/head/head
	body#body.store-active
		//- #desc-product__modal(tabindex='-1', role='dialog', aria-labelledby='mySmallModalLabel', class='modal fade')
		//- 	div(role='document', class='modal-dialog modal-sm')
